                    }
                </td>
                <td>
                    @if (ViewBag.Collection.IsDate1Enabled)
                    {
                        @Html.DisplayFor(modelItem => item.Date1)
                    }
                </td>
                <td>
                    @if (ViewBag.Collection.IsDate2Enabled)
                    {
                        @Html.DisplayFor(modelItem => item.Date2)
                    }
